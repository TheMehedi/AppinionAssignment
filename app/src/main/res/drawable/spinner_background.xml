<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#F5F5F5">
                </solid>

                <corners android:radius="5dp" />

                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="2dp"
                    android:color="@android:color/black"/>
            </shape>
        </item>
        <item >
            <bitmap
                android:gravity="end"
                android:src="@drawable/menudown" />
        </item>
    </layer-list></item>
</selector>